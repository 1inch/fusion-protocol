{
  "name": "limit-order-settlement",
  "version": "0.0.1",
  "description": "1inch Limit Order Settlement",
  "repository": {
    "type": "git",
    "url": "git@github.com:1inch/limit-order-settlement.git"
  },
  "license": "MIT",
  "scripts": {
    "clean": "rimraf artifacts cache coverage contracts/hardhat-dependency-compiler",
    "test": "hardhat test",
    "deploy": "hardhat deploy --network",
    "coverage": "hardhat coverage",
    "docify": "npx solidity-utils-docify",
    "format": "yarn format-js && yarn format-sol",
    "format-js": "prettier '**/*.js' --write",
    "format-sol": "prettier '**/*.sol' --write",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint . --fix",
    "lint:sol": "solhint --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:sol:fix": "solhint --max-warnings 0 \"contracts/**/*.sol\" --fix",
    "lint": "yarn lint:js && yarn lint:sol",
    "lint:fix": "yarn lint:js:fix && yarn lint:sol:fix"
  },
  "dependencies": {
    "@1inch/delegating": "https://github.com/1inch/delegating",
    "@1inch/farming": "https://github.com/1inch/farming",
    "@1inch/limit-order-protocol": "0.3.0-prerelease",
    "@openzeppelin/contracts": "4.7.3"
  },
  "devDependencies": {
    "@1inch/solidity-utils": "2.0.25",
    "@metamask/eth-sig-util": "4.0.1",
    "@nomiclabs/hardhat-etherscan": "3.1.0",
    "@nomiclabs/hardhat-truffle5": "2.0.6",
    "@nomiclabs/hardhat-web3": "2.0.0",
    "chai": "4.3.6",
    "dotenv": "16.0.1",
    "eslint": "8.22.0",
    "eslint-config-standard": "17.0.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-n": "15.2.5",
    "eslint-plugin-promise": "6.0.0",
    "ethereumjs-util": "7.1.5",
    "ethereumjs-wallet": "1.0.2",
    "hardhat": "2.10.2",
    "hardhat-dependency-compiler": "1.1.3",
    "hardhat-deploy": "0.11.12",
    "hardhat-gas-reporter": "1.0.8",
    "prettier": "2.7.1",
    "prettier-plugin-solidity": "1.0.0-beta.24",
    "solc": "0.8.17",
    "solhint": "3.3.7",
    "solidity-coverage": "0.7.21",
    "solidity-docgen": "0.6.0-beta.22"
  }
}
